    <script>
  const boxes = document.querySelectorAll(".gift-box");
  const result = document.getElementById("result");

  const rewards = [
    '<i class="fas fa-money-bill-wave"></i><span> $10,000 Cash Bonus!</span>',
    '<i class="fas fa-money-bill-wave"></i><span> $40,000 Cash Bonus!</span>',
    '<i class="fas fa-money-bill-wave"></i><span> $30,000 Cash Bonus!</span>',
  ];

  let clicked = false;

  // 馃幆 Load saved prize and claim state from localStorage
  const savedPrizeIndex = localStorage.getItem("selectedBoxIndex");
  if (savedPrizeIndex !== null) {
    const index = parseInt(savedPrizeIndex);
    showPrize(index);
    clicked = true;
  }

  function showPrize(index) {
    // Show the prize inside the box
    boxes[index].innerHTML = `<div class="reward">${rewards[index]}</div>`;
    boxes.forEach((b, i) => {
      if (i !== index) {
        b.style.opacity = "0.5";
        b.style.pointerEvents = "none";
      }
    });

    // Telegram redirect link 鈥� opens Telegram with a custom message
    const message = encodeURIComponent(`馃帀 I have won the prize: ${rewards[index].replace(/<[^>]*>/g, '')}`);
    const telegramLink = `https://t.me/share/url?url=${encodeURIComponent("https://t.me/richard55618")}&text=${message}`;

    // Show congratulations and claim button
    result.innerHTML = `
      <p class="reward-text">馃帀 Congratulations! You won: <strong>${rewards[index]}</strong></p>
      <a href="${telegramLink}" class="claim-btn" target="_blank">
        <i class="fas fa-gift"></i> Claim prize
      </a>
    `;
  }

  function createConfetti() {
    const confettiContainer = document.createElement("div");
    confettiContainer.classList.add("confetti");
    document.body.appendChild(confettiContainer);

    for (let i = 0; i < 100; i++) {
      const piece = document.createElement("div");
      piece.classList.add("confetti-piece");
      piece.style.left = Math.random() * 100 + "vw";
      piece.style.animationDuration = 2 + Math.random() * 2 + "s";
      piece.style.setProperty("--hue", Math.floor(Math.random() * 360));
      confettiContainer.appendChild(piece);
    }

    setTimeout(() => confettiContainer.remove(), 4000);
  }

  boxes.forEach((box, index) => {
    box.addEventListener("click", () => {
      if (clicked) return;
      clicked = true;
      localStorage.setItem("selectedBoxIndex", index);

      box.style.transition = "opacity 0.6s";
      box.style.opacity = "0";
      setTimeout(() => {
        box.innerHTML = `<div class="reward">${rewards[index]}</div>`;
        box.style.opacity = "1";
      }, 600);

      boxes.forEach((b) => {
        if (b !== box) {
          b.style.opacity = "0.5";
          b.style.pointerEvents = "none";
        }
      });

      setTimeout(() => {
        showPrize(index);
        createConfetti();
      }, 1200);
    });
  });

  // 鉂わ笍 Like system for comments
  const profiles = document.querySelectorAll(".profile");

  profiles.forEach((profile) => {
    const likeIcon = profile.querySelector(".fa-thumbs-up");
    const likeCount = profile.querySelector(".like-count");
    const id = profile.dataset.id;

    let defaultCount = parseInt(likeCount.getAttribute("data-default"));
    let savedCount = localStorage.getItem(`like_${id}`);
    let count = savedCount ? parseInt(savedCount) : defaultCount;

    let liked = localStorage.getItem(`liked_${id}`) === "true";

    likeCount.textContent = count;
    if (liked) likeIcon.classList.add("liked");

    likeIcon.addEventListener("click", () => {
      liked = !liked;
      if (liked) {
        count++;
        likeIcon.classList.add("liked");
      } else {
        count = Math.max(0, count - 1);
        likeIcon.classList.remove("liked");
      }

      likeCount.textContent = count;
      localStorage.setItem(`like_${id}`, count);
      localStorage.setItem(`liked_${id}`, liked);
    });
  });
  document.getElementById("year").textContent = new Date().getFullYear();
</script>
